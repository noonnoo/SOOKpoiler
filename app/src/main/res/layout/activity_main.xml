<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim"
    android:id="@+id/main_activity"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <com.smarteist.autoimageslider.SliderLayout
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1">

    </com.smarteist.autoimageslider.SliderLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/toChatBot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_chat"
            android:padding="20dp"
            android:background="#30000000"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:text="챗봇" />

        <Button
            android:id="@+id/toChart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pie"
            android:padding="20dp"
            android:background="#30000000"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:text="차트" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toMap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_map"
            android:padding="20dp"
            android:background="#30000000"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:text="학교 지도" />

        <Button
            android:id="@+id/toScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_scholarship"
            android:padding="20dp"
            android:background="#30000000"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="궁예" />
    </LinearLayout>
    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:bmb_buttonEnum="ham"
        app:bmb_piecePlaceEnum="piecePlace_ham_4"
        app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
        />
</LinearLayout>